{
  "name": "flamingo",
  "version": "2.1.3-alpha.1",
  "description": "simple, hapijs based, HTTP server that allows you to convert media files to images",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "lint": "tslint -c tslint.json index.ts 'src/**/*.ts' config.ts 'test/**/*.ts' 'tutorials/**/*.ts'",
    "lint-fix": "tslint --fix -c tslint.json index.ts 'src/**/*.ts' config.ts 'test/**/*.ts' 'tutorials/**/*.ts'",
    "predocs": "rm -r docs 2>/dev/null || yarn build",
    "docs": "typedoc --excludeExternals --exclude '**/+(test|targets)/**' --mode modules --out docs src/writer/file.ts",
    "build": "tsc",
    "pretest": "yarn prettier && yarn lint && yarn build",
    "test": "TEST=true yarn cover",
    "preversion": "npm test",
    "bench": "yarn build && node targets/bench",
    "formats": "node targets/formats",
    "cover": "nyc mocha",
    "release": "standard-version",
    "prettier": "prettier --single-quote --write --parser typescript \"{src,test}/**/*.ts\"",
    "prepublishOnly": "yarn test && yarn build"
  },
  "author": "Christian",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "bugs": {
    "url": "https://github.com/piobyte/flamingo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piobyte/flamingo"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "boom": "^5.2.0",
    "buffer-peek-stream": "^1.0.1",
    "bunyan": "^1.8.12",
    "clamp": "^1.0.1",
    "file-type": "^7.2.0",
    "fluent-ffmpeg": "^2.1.0",
    "got": "^7.1.0",
    "hapi": "^16.5.2",
    "is-stream": "^1.1.0",
    "lodash": "^4.16.2",
    "mimeparse": "^0.1.4",
    "mkdirp": "^0.5.0",
    "optional": "^0.1.4",
    "sharp": "^0.19.0",
    "temp": "^0.8.3",
    "through2": "^2.0.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.4",
    "@types/boom": "^4.3.7",
    "@types/bunyan": "^1.8.2",
    "@types/hapi": "^16.1.9",
    "@types/lodash": "^4.14.74",
    "@types/mocha": "^2.2.42",
    "@types/node": "^8.0.26",
    "@types/sharp": "^0.17.4",
    "@types/sinon": "^4.1.2",
    "@types/uuid": "^3.4.1",
    "benchmark": "^2.1.1",
    "mocha": "^4.0.0",
    "nock": "^9.0.14",
    "nyc": "^11.1.0",
    "prettier": "^1.6.1",
    "sinon": "^4.0.1",
    "standard-version": "^4.1.0",
    "tslint": "^5.7.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.5.2",
    "uuid": "^3.1.0"
  },
  "optionalDependencies": {
    "gm": "^1.23.0",
    "markdown-it": "^8.4.0",
    "memwatch-next": "^0.3.0",
    "screenshot-stream": "^4.1.0",
    "webshot": "makepanic/node-webshot#1ddeb1f396f1de14480d53e017e0b14ee0304e28"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 96,
    "statements": 96,
    "functions": 96,
    "branches": 90,
    "reporter": [
      "text-summary",
      "html"
    ],
    "include": [
      "src/**/*.js",
      "test/**/*.js",
      "tutorials/**/*.js"
    ],
    "exclude": [
      "src/profiles/debug.js",
      "src/writer/file.js"
    ],
    "all": true
  }
}
